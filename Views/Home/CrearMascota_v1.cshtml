@model WebAppVete.Models.Mascota

@{
    ViewData["Title"] = "CrearMascota";
}

<h1>CrearMascota</h1>

<h4>Mascota</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="GuardarMascota">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Propietario" class="control-label"></label>
                <input asp-for="Propietario" class="form-control" />
                <span asp-validation-for="Propietario" class="text-danger"></span>
            </div>
            <div class="form-group">
                Selecciona la especie:
                <select name="especie" class="form-control">
                    <option value="Gato">Gato</option>
                    <option value="Perro" selected>Perro</option>
                    <option value="Otro">Otro</option>
                </select>

               @*  <label asp-for="EspecieId" class="control-label"></label>
                <select asp-for="EspecieId" class ="form-control" asp-items="ViewBag.EspecieId"></select> *@
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
